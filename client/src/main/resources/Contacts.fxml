<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="geekbrains.client.controllers.ContactsController"
          alignment="center" hgap="4" vgap="4">
    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>

    <TextField fx:id="searchInput" minWidth="400" GridPane.columnIndex="0" GridPane.rowIndex="0"
               onAction="#search"/>

    <ListView fx:id="searchResults" minHeight="550" GridPane.columnIndex="0" GridPane.rowIndex="1"/>

    <Button fx:id="addContact" disable="true" GridPane.columnIndex="0" GridPane.rowIndex="2"
            text="Add Contact" onAction="#addContact"/>

</GridPane>